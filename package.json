{
	"name": "mobbing-tools",
	"displayName": "Mobbing Tools",
	"description": "A collection of tools to aid in mob programming",
	"author": {
        "name": "Scott Reed",
        "email": "sreed@meetsoci.com"
    },
	"publisher": "sreed101",
	"license": "SEE LICENSE IN LICENSE",
	"homepage": "https://github.com/sreed101/Mobbing-Tools/blob/master/README.md",
	"repository": {
        "type": "git",
        "url": "https://github.com/sreed101/Mobbing-Tools.git"
    },
    "bugs": {
        "url": "https://github.com/sreed101/Mobbing-Tools/issues"
    },
	"version": "1.0.13",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*",
		"onCommand:mobTools.commitMessage",
		"onCommand:mobTools.gitParse",
		"onCommand:mobTools.runUnits"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Mobbing Tools",
			"properties": {
				"mobTools.pattern": {
					"type": "string",
					"default": "(SO-[0-9]*)",
					"description": "A regular expression to extract from the branch name the ticket number."
				},
				"mobTools.patternIgnoreCase": {
					"type": "boolean",
					"default": false,
					"description": "Ignore case in pattern."
				},
				"mobTools.replacement": {
					"type": "string",
					"default": "[$1] ",
					"description": "Content to place in commit message."
				},
				"mobTools.mobTime": {
					"type": "number",
					"default": 15,
					"description": "Pull file changes from the past X minutes into the commit message, this is recommended to be slightly higher than your standard mobbing time."
				},
				"mobTools.unitRegex": {
					"type": "string",
					"default": "^soci/spec/unit.*php",
					"description": "Regular expression to search the git log for unit tests"
				}
			}
		},
		"commands": [
			{
				"command": "mobTools.commitMessage",
				"title": "MOB",
				"category": "[MOB]"
			},
			{
				"command": "mobTools.gitParse",
				"title": "Log Parse",
				"category": "[MOB]"
			},
			{
				"command": "mobTools.runUnits",
				"title": "Run Units",
				"category": "[MOB]"
			}
		],
		"menus": {
			"scm/title": [
				{
					"command": "mobTools.commitMessage",
					"when": "scmProvider == git",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
